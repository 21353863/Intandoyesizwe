@model Intandoyesizwe.Models.Rejected
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Reject Student
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Tables</a></li>
                <li><a href="#">Applications</a></li>
                <li class="active">Reject</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Are you sure you want to reject this Learner?</h4>
                                    <h5>Provide Reason and click "Confirm" below.</h5>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row mb-6">
                                        <div class="col-md-6">
                                            <label>Reason:</label>
                                            @Html.EditorFor(model => model.reason, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.reason, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <br />
                                    <div class="row mb-6">
                                        <div class="col-md-6">
                                            <input type="submit" value="Confirm" class="btn btn-danger" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <div>
                                @Html.ActionLink("Back to List", "Index", "AdmissionApplications")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}