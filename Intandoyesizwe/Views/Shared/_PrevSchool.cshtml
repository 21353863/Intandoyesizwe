@model Intandoyesizwe.Models.View_Models.PrevSchoolVM
<!DOCTYPE html>
<html>
<body>
    @using (Html.BeginForm("PrevSchool", "AdmissionApplication", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-6">
                <div class="card">
                    <h3 class="line-head"> Previous School Infromation</h3>
                    <div class="body">
                        <div>
                            <div class="row mb-20">
                                <div class="col-md-12">
                                    <label>Name of Previous School:</label>
                                    @Html.EditorFor(model => model.schoolName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.schoolName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-20">
                                    <label>Street:</label>
                                    @Html.EditorFor(model => model.street, new { htmlAttributes = new { placeholder = "Street", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.street, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-20">
                                <div class="col-md-6">
                                    <label>Suburb:</label>
                                    @Html.EditorFor(model => model.suburb, new { htmlAttributes = new { placeholder = "Suburb", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.suburb, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <label>City:</label>
                                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { placeholder = "City", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-20">
                                <div class="col-md-6">
                                    <label>Area Code:</label>
                                    @Html.EditorFor(model => model.code, new { htmlAttributes = new { placeholder = "Code", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <label>Province:</label>
                                    @Html.DropDownListFor(model => model.province, new[]{
                                            new SelectListItem(){Text="KwaZulu Natal",Value="KwaZulu Natal"},
                                            new SelectListItem(){Text="Eastern Cape",Value="Eastern Cape"},
                                            new SelectListItem(){Text="Free State",Value="Free State"},
                                            new SelectListItem(){Text="Gauteng",Value="Gauteng"},
                                            new SelectListItem(){Text="Limpopo",Value="Limpopo"},
                                            new SelectListItem(){Text="Mpumalanga",Value="Mpumalanga"},
                                            new SelectListItem(){Text="Northern Cape",Value="Western Cape"},
                                            new SelectListItem(){Text="North West", Value="North West"},
                                            new SelectListItem(){Text="Western Cape", Value="Western Cape"},
                                            }, "Select Province", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.province, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h3 class="line-head"><i class="fa fa-calendar"></i> Correspondance Details</h3>
                    <div class="body">
                        <div>
                            <div class="row mb-12">
                                <div class="col-md-4">
                                    <label>Title:</label>
                                    @Html.DropDownListFor(model => model.title, new[]{
                                            new SelectListItem(){Text="Mr.",Value="Mr."},
                                            new SelectListItem(){Text="Mrs.",Value="Mrs."},
                                            new SelectListItem(){Text="Miss.",Value="Miss."},
                                            }, "Select Title", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-8">
                                    <label>Surname:</label>
                                    @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-20">
                                    <label>Postal Address:</label>
                                    @Html.EditorFor(model => model.firstLine, new { htmlAttributes = new { placeholder = "Street", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.firstLine, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mb-20">

                                <div class="col-md-12">
                                    <label>City:</label>
                                    @Html.EditorFor(model => model.postalCity, new { htmlAttributes = new { placeholder = "City", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.postalCity, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-20">
                                    <label>Postal Code:</label>
                                    @Html.EditorFor(model => model.postalCode, new { htmlAttributes = new { placeholder = "Code", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.postalCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div style="float: right">
                    <input type="submit" value="Next" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</body>
</html>